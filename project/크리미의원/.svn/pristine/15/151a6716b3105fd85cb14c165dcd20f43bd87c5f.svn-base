.about-tab {
  position: absolute;
  width:100%;
  top:-50%;
  transform:translateY(50%);
}
.about-tab ul {
  overflow:hidden;
}
.about-tab li {
  float:left;
  width:25%;
  height:80px;
  border:1px solid #e5e5e5;
  border-left:none;
  border-top:none;
  background-color:#fff;
  text-align: center;
  box-sizing: border-box;
}
.about-tab li:first-child {
  border-left:1px solid #e5e5e5;
}
.about-tab li a {
  display:block;
  font-size:20px;
  line-height:80px;
  font-weight:bold;
  color:#333;
}
.about-tab li.on a {
  background-color:#aa89bd;
  color:#fff;
}