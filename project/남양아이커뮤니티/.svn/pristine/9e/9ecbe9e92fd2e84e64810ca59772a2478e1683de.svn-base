.main-recommend-product .product-list li {float:left;width:50%;margin-top:10px;padding:0 5px;}
.main-recommend-product .product-list li .product-list-item {overflow:hidden;min-height:210px;border-radius:7px;background:#fff;}
.main-recommend-product .product-list li .product-list-item .img {position:relative;min-height:146px;border:0;}
.main-recommend-product .product-list li .product-list-item .img img {position:absolute;top:50%;left:50%;-webkit-transform:translate(-50%, -50%);transform:translate(-50%, -50%);}
.main-recommend-product .product-list li .product-list-item .product-item-text {overflow:hidden;height:40px;padding:0 20px;font-size:14px;color:#000;line-height:20px;} */


/* login */
.login-wrap {padding:35px 35px 0;}
.login-wrap .login-title {font-size:27px;line-height:37px;font-weight:700;}
.login-box {position:relative;margin-top:35px;}
.login-box div {position:relative;border-bottom:2px solid #000;}
.login-box .inp-box {width:100%;height:40px;padding:4px 10px 4px 32px;font-size:13px;color:#000;line-height:normal;}
.login-box .pw-box {margin-top:10px;}
.login-box .error-msg {position:absolute;bottom:-37px;left:0;float:none;margin-top:15px;}
.login-box .id-box:before {display:block;position:absolute;top:50%;left:0;margin-top:-8px;background-image:url(../images/common/icon/ico_login_id.png);background-size:17px 17px;width:17px;height:17px;content:'';}
.login-box .pw-box:before {display:block;position:absolute;top:50%;left:0;margin-top:-7px;background-image:url(../images/common/icon/ico_login_pw.png);background-size:14px 16px;width:14px;height:16px;content:'';}
.login-wrap .inp-chk-box {margin-top:15px;text-align:right;}
.login-wrap .login {margin-top:20px;}
.login-wrap .login button {width:100%;}
.login-link-wrap {text-align:center;}
/* .login-wrap .login-chk-box {margin-top:-37px;} */
.login-wrap .login-chk-box .btn-login {width:100%;margin-top:20px;padding:12px 10px;border-radius:23px;background:#ec1f2f;font-size:16px;font-weight:700;color:#fff;line-height:22px;letter-spacing: -1.5px;}

.login-sub-link {display:inline-block;margin-top:20px;overflow:hidden;}
.login-sub-link li {position:relative;float:left;margin-left:30px;}
.login-sub-link li:after {display:block;position:absolute;left:-15px;top:50%;margin-top:-5px;width:1px;height:10px;background-color:#ddd;content:'';}
.login-sub-link li:first-child {margin-left:0;}
.login-sub-link li a {font-size:13px;line-height:20px;color:#444;}
.login-sns-box {position:absolute;left:0;right:0;bottom:35px;text-align:center;}
.login-sns-box:after {display:block;position:absolute;top:10px;left:0;right:0;height:1px;background-color:#ddd;content:'';z-index:-1;}
.login-sns-title {display:inline-block;padding:0 10px;background-color:#fff;font-size:17px;line-height:20px;color:#000;font-weight:700;}
.login-sns {margin-top:20px;overflow:hidden;}
.login-sns li {float:left;width:25%;text-align:center;}
.login-cont {min-height:568px !important;}