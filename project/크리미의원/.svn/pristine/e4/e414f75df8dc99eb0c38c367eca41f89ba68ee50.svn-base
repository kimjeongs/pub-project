/*style.css*/
@import 'utf-8';

/*코스메틱 style*/
.content {
    max-width: 1300px;
    width: 100%;
    margin: auto;
    position: relative;
    padding: 100px 0;
}

.cont_hd img {
    width: 100%;
}

.cont_hd .pc {
    display: block;
}

.cont_hd .mb {
    display: none;
}

.con_banner {
    position: absolute;
    max-width: 1100px;
    width: 90%;
    left: 50%;
    transform: translateX(-50%);
    top: -40%;
    z-index: 1;
}

.con_banner.mb {
    display: none;
}

.con_banner img {
    width: 100%;
}

.content {
    clear: both;
    /*overflow: hidden;*/
    display: block;
}

/*con_01 style*/
.con_01 {
    max-width: 1100px;
    width: 100%;
    margin: auto;
    font-size: 18px;
    background: #fff;
}

.con_01 .product {
    width: 32%;
    margin-right: 1%;
    margin-bottom: 2%;
    background: #fff;
    position: relative;
    float: left;
}

.con_01 .product > a:first-child {
    display: block;
    padding: 8%;
    box-sizing: border-box;
}

.con_01 .product figure {
    display: block;
    text-align: center;
    border-bottom: 2px solid #eee;
    padding: 5% 0 20%;
}

.con_01 .product figure img {
    width: 40%;
}

.con_01 .product div span,
.con_01 .product div strong {
    display: block;
    text-align: left;
    margin-top: 10px;
}

.product div span {
    color: #aaa;
    font-size: 15px;
    font-weight: bold;
}

.product .name {
    color: #222;
}

.product .price {
    color: #afaee8;
}

.product .buy {
    display: block;
    position: absolute;
    right: 8%;
    bottom: 8%;
    color: #fff;
    background: #afaee8;
    width: 50px;
    height: 50px;
    border-radius: 100%;
    line-height: 50px;
    font-size: 14px;
    font-weight: bold;
    text-align: center;
}


/*event style*/
.event .con_01,
.event #portfoliolist {
    max-width: 1100px;
    width: 100%;
    margin: auto;
}

.event .con_01 {
    margin-bottom: 2%;
}

.search-container {
    width: 100%;
    margin-bottom: 2%;
    overflow: hidden;
}

.search-container.pc {
    display: block;
}

.search-container.mb {
    display: none;
}

.search-container form {
    position: relative;
}

.search-container input[type=text] {
    height: 40px;
    font-size: 17px;
    border: none;
    width: 100%;
    border-bottom: 2px solid #666;
}

.search-container input[type=text]::placeholder {
    color: #dbdbdb;
    font-size: 24px;
    font-weight: bold;
}

.search-container button {
    position: absolute;
    right: 10px;
    top: 0;
    display: block;
    width: 30px;
    height: 30px;
    font-size: 17px;
    border: none;
    cursor: pointer;
    background: #fff;
}

.search-container button img {
    width: 100%;
}

.event .con_02 {
    width: 100%;
    background: #f5f5f5;
}

/*filter style*/
#filters {
    display: block;
}

#filters.mb {
    display: none;
}

#filters li {
    float: left;
    width: 11.5%;
    margin-right: 1%;
}

#filters li:last-child {
    margin-right: 0;
}

#filters li span {
    display: block;
    text-align: center;
    border: 1px solid #999;
    line-height: 40px;
    border-radius: 100px;
    font-size: 14px;
}

#filters li span.active {
    background: #444;
    color: #fff;
}

#portfoliolist .portfolio {
    display: none;
}

#portfoliolist {
    padding: 2% 0;
}

.con_title {
    padding: 2% 0;
    border-bottom: 1px solid #000;
    overflow: hidden;
    color: #333;
    clear: both;
}

.con_title h3 {
    float: left;
}

.con_title h3 br {
    display: none;
}

.con_title > span {
    float: right;
    position: relative;
    display: block;
}

.portfolio-wrapper {
    margin-bottom: 5%;
}

.portfolio ul {
    padding: 2% 1%;
    overflow: hidden;
    border-bottom: 1px solid #dbdbdb;
    clear: both;
}

.portfolio ul li {
    float: left;
    line-height: 40px;
}

.portfolio ul li:first-child small {
    display: block;
    line-height: 13px;
    font-size: 13px;
    color: #999;
}

.portfolio ul li:nth-child(2) {
    width: 15%;
    text-align: center;
    margin-right: 2%;
    line-height: 3.5;
}

.portfolio ul li:nth-child(2) span {
    text-decoration: line-through;
    color: #999;
    margin-right: 5%;
}

.portfolio ul li:last-child {
    width: 8%;
    text-align: center;
}

.portfolio .hot {
    position: relative;
    padding-left: 5%;
    width: 70%;
}

.portfolio ul li:last-child a {
    display: block;
    margin-top: 12px;
    height: 30px;
    line-height: 30px;
    border: 1px solid #999;
    border-radius: 100px;
    color: #333;
    background: #fff;
    font-size: 14px;
}

.portfolio ul li:last-child a:hover {
    background: #444;
    color: #fff;
}

/*con_title right text before color*/
.portfolio .con_title > span::before {
    content: '';
    position: absolute;
    display: block;
    left: -45px;
    top: 50%;
    transform: translateY(-50%);
    width: 35px;
    height: 5px;
    border-radius: 100px;
}

.portfolio.red .con_title > span::before {
    background: #e50113;
}

.portfolio.orange .con_title > span::before {
    background: #fe670e;
}

.portfolio.yellow .con_title > span::before {
    background: #f9b552;
}

.portfolio.green .con_title > span::before {
    background: #8fc320;
}

.portfolio.blue .con_title > span::before {
    background: #00a0ea;
}

.portfolio.violet .con_title > span::before {
    background: #8a8ae5;
}

/*hot color*/
.portfolio .hot::before {
    position: absolute;
    content: 'HOT';
    display: block;
    left: 0;
    top: 0;
    width: 40px;
    height: 40px;
    line-height: 40px;
    font-size: 11px;
    font-weight: bold;
    text-align: center;
    border-radius: 100%;
    color: #fff;
}

.portfolio.red .hot::before {
    background: #e50113;
}

.portfolio.orange .hot::before {
    background: #fe670e;
}

.portfolio.yellow .hot::before {
    background: #f9b552;
}

.portfolio.green .hot::before {
    background: #8fc320;
}

.portfolio.blue .hot::before {
    background: #00a0ea;
}

.portfolio.violet .hot::before {
    background: #8a8ae5;
}

/*list style color*/
.portfolio .list {
    position: relative;
    padding-left: 2%;
    width: 73%;
}

.portfolio .list::after {
    position: absolute;
    content: '';
    left: 0;
    top: 17px;
    content: "";
    display: block;
    width: 6px;
    height: 6px;
    border-radius: 100%;
}

.portfolio.red .list::after {
    background: #e50113;
}

.portfolio.orange .list::after {
    background: #fe670e;
}

.portfolio.yellow .list::after {
    background: #f9b552;
}

.portfolio.green .list::after {
    background: #8fc320;
}

.portfolio.blue .list::after {
    background: #00a0ea;
}

.portfolio.violet .list::after {
    background: #8a8ae5;
}


/*media query*/
@media screen and (max-width:1120px) {

    /*event style*/
    .content {
        padding: 50px 0;
    }

    .content.cosm {
        padding: 100px 0;
    }

    /*event media style*/

    .con_01,
    .con_02 {
        padding: 0 2%;
        box-sizing: border-box;
    }

    .portfolio .hot {
        width: 65%;
    }

    .portfolio .list {
        width: 68%;
    }

    .portfolio ul li:nth-child(2) {
        width: 20%;
    }

    /*cosmetic style*/
    .con_banner {
        top: -30%;
    }

}

@media screen and (max-width:900px) {
    .product .buy {
        right: 5%;
        width: 40px;
        height: 40px;
        line-height: 40px;
    }
}

@media screen and (max-width:860px) {

    /*cosmetic style*/
    .con_banner {
        top: -25%;
    }

    .product .buy {
        right: 3%;
        width: 35px;
        height: 35px;
        line-height: 35px;
        font-size: 13px;
    }
}

@media screen and (max-width:768px) {

    /*event style*/


    .search-container {
        display: none;
    }

    .portfolio .hot {
        width: 60%;
        padding-left: 7%;
    }

    .portfolio .list {
        width: 65%;
    }

    .portfolio ul li:last-child {
        width: 11%;
    }

    .cont_hd .pc {
        display: none;
    }

    .cont_hd .mb {
        display: block !important;
    }

    #filters.pc {
        display: none !important;
    }

    #filters.mb {
        display: flex !important;
    }

    #filters li {
        width: 120px !important;
    }

    .con_01 {
        border-bottom: 1px solid #dbdbdb;
        padding: 5% !important;
    }

    .con_01,
    .con_02 {
        box-sizing: border-box;
        overflow: hidden;
    }

    .con_02 {
        padding: 1%;
        background: #fff !important;
    }

    .event .con_01,
    .event #portfoliolist {
        max-width: 100%
    }

    .event #portfoliolist {
        padding: 0;
    }

    .start {}

    .show {
        width: 95%;
        overflow: hidden;
        margin: 0 auto;
        height: 100px;
        border: 5px solid #eee;
        border-radius: 5px;
        font-size: 14px;

    }

    .swiper-box {
        width: 100%;
        border: 1px solid #ccc;
    }

    .swiper1 {
        width: 100%;
    }

    .swiper1 li span {
        width: 100%;
    }

    .swiper1 li span.selected {
        background: #444;
        color: #fff;
    }

    .swiper1 .swiper-slide {
        text-align: center;
        font-size: 18px;
        height: 50px;
        /* Center slide text vertically */
        display: -webkit-box;
        display: -ms-flexbox;
        display: -webkit-flex;
        display: flex;
        -webkit-box-pack: center;
        -ms-flex-pack: center;
        -webkit-justify-content: center;
        justify-content: center;
        -webkit-box-align: center;
        -ms-flex-align: center;
        -webkit-align-items: center;
        align-items: center;
        cursor: pointer;
    }

    .swiper2 {
        width: 100%;
        height: 400px;
    }

    .swiper2 .swiper-slide {
        height: 400px;
        background-color: #ccc;
        text-align: center;
    }

    .content {
        padding: 0;
    }

    .portfolio-wrapper {
        margin-bottom: 0;
    }

    .con_title h3 {
        padding-left: 1%;
    }

    .con_title h3 br {
        display: block !important;
    }

    /*#태그 컬러 색상*/
    .portfolio.red h3 span {
        color: #e50113;
    }

    .portfolio.orange h3 span {
        color: #fe670e;
    }

    .portfolio.yellow h3 span {
        color: #f9b552;
    }

    .portfolio.green h3 span {
        color: #8fc320;
    }

    .portfolio.blue h3 span {
        color: #00a0ea;
    }

    .portfolio.violet h3 span {
        color: #8a8ae5;
    }

    .con_title > span {
        display: none;
    }

    .portfolio ul li {
        float: none;
        line-height: 2;
        padding-left: 0 !important;
    }


    .portfolio .list::after {
        display: none;
    }

    .portfolio .hot {
        padding-left: 7% !important;
    }

    .portfolio ul li:nth-child(2) span {
        display: none;
    }

    .portfolio ul li:nth-child(2) strong {
        float: left;
    }

    .portfolio ul {
        position: relative;
        padding: 1%;
    }

    .portfolio ul li:last-child {
        position: absolute;
        right: 10px;
        top: 50px;
        width: 100px;
        height: 30px;
    }

    .portfolio .hot::before {
        top: 5px;
    }

    .con_title {
        padding: 6% 0 2%;
    }

    .event .con_02 {
        padding-bottom: 50px;
    }

    /*cosmetic style*/
    .content.cosm {
        padding-top: 0;
    }

    .con_banner {
        position: static;
        transform: translateX(0);
        width: 100%;
    }

    .con_banner.pc {
        display: none;
    }

    .con_banner.mb {
        display: block;
    }

    .con_01 .product {
        width: 49.5%;
    }

    .con_01 .product:nth-of-type(even) {
        margin-right: 0;
    }

    /*cosmetic style*/
    .cosmetic,
    .cosmetic .con_01 {
        background: #f5f5f5 !important;
        border-bottom: 0;
    }

    .product .buy {
        position: static;
        display: block;
        width: 100%;
        border-radius: 100px;
        margin-bottom: 0;
        box-sizing: border-box;
    }

    .con_01 .product > a:first-child {
        padding: 0;
        padding-bottom: 4%;
    }

    .con_01 .product {
        width: 48.5%;
        margin-right: 3%;
        margin-bottom: 3%;
        padding: 5%;
        box-sizing: border-box;
    }

    .con_01 .product div span {
        font-size: 13px;
    }

    .con_01 .product div strong {
        font-size: 14px;
    }

    .con_01 .product div .price {
        font-size: 14px;
    }

    .cont_hd .pc {
        display: none !important;
    }

    .cont_hd .mb {
        display: block !important;
    }
}

@media screen and (max-width:648px) {

    .portfolio .hot {
        padding-left: 9% !important;
    }

}

@media screen and (max-width:414px) {

    .portfolio-wrapper {
        padding: 2%;
    }

    .portfolio .hot {
        padding-left: 12% !important;
    }

    .portfolio .hot::before {
        top: 8px;
    }

    .portfolio ul li:last-child {
        top: auto;
        bottom: 35px;
        width: 70px;
    }
}

@media screen and (max-width:411px) {
    .portfolio ul li:last-child a {
        margin-top: 0;
    }

    .portfolio ul li:last-child {
        top: auto;
        bottom: 20px !important;
    }
}

@media screen and (max-width:375px) {

    /*event style*/
    .portfolio .hot {
        padding-left: 14% !important;
    }

    /*cosmetic style*/
    .product .buy {
        height: 30px;
        line-height: 30px;
    }

}

@media screen and (max-width:360px) {
    .portfolio ul li:nth-child(2) {
        width: auto;
    }
}

@media screen and (max-width:320px) {

    /*event style*/
    .portfolio ul li {
        font-size: 14px;
    }

    .portfolio ul li:last-child {
        bottom: 20px !important;
        top: auto;
    }

    .portfolio ul li:last-child a {
        margin-top: 0;
    }

    .con_01 {
        padding: 3% !important;
    }

    #filters li {
        width: 100px !important;
    }

    #filters li span {
        height: 30px;
        line-height: 30px
    }

    /*cosmetic style*/
    .con_01 .product div span {
        font-size: 11px;
    }

    .con_01 .product div strong {
        font-size: 13px;
    }

    .con_01 .product div .price {
        font-size: 13px;
    }
}
