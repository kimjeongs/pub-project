/* main */
.header-cont.main {border-bottom:0;}

.main-page-wrap {margin-bottom:-40px;}
.main-page-wrap .title-box {margin:0 0 18px;}
.main-page-wrap .title-box .post-title {font-size:17px;line-height:18px;}

.main-swiper-wrap {overflow:hidden;}
.main-swiper {overflow:visible;width:100%;margin-left:-16px;padding-bottom:170px;}
.main-swiper .swiper-slide {text-align:left;}
.main-swiper .swiper-slide .img {position:relative;overflow:hidden;width:100%;height:100%;padding-top:58.42%;border-radius:10px;}
.main-swiper .swiper-slide .img img {position:absolute;top:50%;left:50%;-webkit-transform:translate(-50%, -50%);transform:translate(-50%, -50%);width:100%;}
.main-swiper .swiper-slide .main-text-box {position:absolute;top:171px;left:31px;z-index:2;}
.main-swiper .swiper-slide .main-text-box .eyebrow {display:inline-block;margin-bottom:9px;padding:0 10px;border-radius:18px;background:#ef4639;font-size:11px;color:#fff;line-height:23px;}
.main-swiper .swiper-slide .main-text-box .main-title {display:block;font-size:23px;color:#000;line-height:32px;}
.main-swiper .swiper-slide .main-text-box .main-desc {display:block;margin-top:9px;font-size:13px;color:#444;line-height:21px;}
.main-swiper .swiper-slide .main-text-box .btn-common-link {display:inline-block;margin-top:18px;}
.main-swiper .swiper-pagination {bottom:40px;left:auto;right:0;display:inline-block;width:auto;}

.main-login-box {padding:26px 15px 30px;border-top:1px solid #ddd;text-align:center;}
.main-login-box .main-login-title {font-size:16px;color:#000;line-height:23px;}
.main-login-box .btn-box {margin-top:9px;}
.main-login-box .main-login-desc {margin-top:10px;font-size:13px;color:#000;line-height:23px;}
.main-calendar-area {margin-top:12px;padding:0 40px;}
.main-calendar-area .btn-smart-calendar {position:relative;overflow:hidden;display:block;height:40px;padding:0 40px 0;border:2px solid #ec1f2f;border-radius:20px;font-size:14px;color:#000;line-height:36px;text-align:left;text-overflow:ellipsis;white-space:nowrap;}
.main-calendar-area .btn-smart-calendar:before {content:'';position:absolute;top:50%;left:12px;width:20px;height:20px;margin-top:-10px;background:url(../images/header/icon/ico_header_calendar.png);background-size:100%;}
.main-calendar-area .btn-smart-calendar span {position:absolute;top:50%;right:12px;-webkit-transform:translateY(-50%);transform:translateY(-50%);display:inline-block;font-size:15px;font-weight:700;color:#ec1f2f;line-height:37px;}
.main-login-sub {font-size:0;text-align:center;}
.main-login-sub li {display:inline-block;}
.main-login-sub li + li {position:relative;margin-left:13px;padding-left:13px;}
.main-login-sub li + li:before {content:'';position:absolute;top:11px;bottom:11px;left:0;width:1px;background:#ccc;}
.main-login-sub li a {font-size:13px;color:#000;line-height:30px;}

.main-information-box {padding:38px 15px 40px;border-top:1px solid #ddd;background:#f5f5f5;}
.main-information-box .post-list li .item-banner {position:relative;overflow:hidden;display:block;border-radius:7px;}
.main-information-box .post-list li .item-banner .img {display:block;width:100%;height:100%;}
.main-information-box .post-list li .item-banner .img img {min-height:240px;height:100%;}
.main-information-box .post-list li .item-banner .item-banner-text {position:absolute;top:29px;left:0;right:0;text-align:center;}
.main-information-box .post-list li .item-banner .item-banner-text .item-banner-title {display:block;font-size:18px;color:#fff;line-height:24px;}
.main-information-box .post-list li .item-banner .item-banner-text .desc-ico {display:inline-block;margin:9px 8px 0 0;vertical-align:middle;}
.main-information-box .post-list li .item-banner .item-banner-text .item-banner-desc {display:inline-block;margin-top:9px;font-size:11px;color:#fff;line-height:17px;vertical-align:middle;}
.main-information-box .post-list li.full-banner {width:100%;}
.main-information-box .post-list li.full-banner .item-banner {min-height:214px;}
.main-information-box .post-list li.full-banner .item-banner .img img {min-height:214px;height:auto;}
.main-information-box .post-list li.full-banner .item-banner-text {top:0;bottom:0;left:0;padding:30px 30px 75px;text-align:left;}
.main-information-box .post-list li.full-banner .item-banner-text .item-banner-eyebrow {display:block;margin-bottom:11px;font-size:11px;color:#000;line-height:12px;}
.main-information-box .post-list li.full-banner .item-banner-text .item-banner-title {font-size:18px;color:#000;line-height:22px;}
.main-information-box .post-list li.full-banner .item-banner-text .item-banner-desc {font-size:11px;color:#444;line-height:16px;}
.main-information-box .post-list li.full-banner .item-banner-text .btn-common-link {position:absolute;bottom:28px;left:30px;}
.main-information-box .post-list li.full-banner .item-banner-text .btn-common-link:after {background-image:url(../images/common/icon/ico_btn_common_link3.png);}

.main-page-wrap .connect-btm-cont {padding:38px 15px 22px;background:#f8ece1;}
.main-page-wrap .connect-btm-cont .product-list li a {border:0;background:#fff;}
.main-page-wrap .connect-btm-cont .product-list li a .sr-desc {display:block;text-align:center;}
